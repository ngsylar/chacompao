<div class="phome">
<h1>Chá com Pão</h1>
<br/>
  <% if user_signed_in? && current_user.themepref == 'dark' %>
    <%= image_tag("guitar_piano3.png") %>
  <% else %>
    <%= image_tag("guitar_piano2.png") %>
  <% end %>
</div><br/>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :email, "E-mail" %><br/>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password, "Senha" %><br/>
    <%= f.password_field :password, autocomplete: "current-password" %>
  </div><br/>

  <% if devise_mapping.rememberable? %>
    <div class="phome fieldcheck">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, "Lembre-se de mim" %>
    </div>
  <% end %>

  <div class="phome">
    <%= f.submit "Entrar" %>
  </div><br/><br/>
<% end %>

<div class="phome"><%= render "devise/shared/links" %></div>
