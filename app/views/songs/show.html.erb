<p id="notice"></p>
<p id="alert"></p>
<p>
  <%= link_to 'Início', "../home/index" %> | 
  <%= link_to 'Buscar música', songs_path %>
</p>

<p>
  <h2>
    <% if @song.number %>
      <%= "#{@song.number} - " %>
    <% end %>
    <%= @song.title %>
    <% if !@song.author.empty? %>
      <%= "(#{@song.author})" %>
    <% end %>
  </h2>
  <i class="material-icons md-18">grading</i> <%= link_to "Cifra Padrão", @def_version, method: :get %> (<%= @def_version.key %>)
</p>
<br/>

<h3>Minhas cifras
<%= link_to new_version_path(ref_song: @song.id) do %><i class="material-icons md-18">post_add</i><% end %></h3>
<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @my_versions.each do |version| %>
      <tr>
        <td><%= link_to version.title, version, method: :get %></td>
        <td>(<%= version.key %>)</td>
        <td><%= link_to edit_version_path(version) do %><i class="material-icons md-18">edit</i><% end %>
        <%= link_to version, method: :delete, data: { confirm: 'Tem certeza? Esta ação não poderá ser desfeita.' } do %>
        <i class="material-icons md-18">delete</i><% end %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br/>

<h3>Cifras de outros usuários</h3>
<table>
  <thead>
    <tr>
      <% if current_user.role == "administrator" %>
        <th colspan="3"></th>
      <% else %>
        <th colspan="2"></th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @other_vers.each do |version| %>
      <tr>
        <td><%= link_to version.title, version, method: :get %>
        <br/>por <%= User.find(version.user_id).full_name %></td>
        <td>(<%= version.key %>)</td>
        <% if current_user.role == "administrator" %>
          <td><%= link_to edit_version_path(version) do %><i class="material-icons md-18">edit</i><% end %>
          <%= link_to version, method: :delete, data: { confirm: 'Tem certeza? Esta ação não poderá ser desfeita.' } do %><i class="material-icons md-18">delete</i><% end %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br/><br/><%= link_to 'Procurar outra música', songs_path %>
